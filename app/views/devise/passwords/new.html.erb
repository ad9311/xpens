<div class="text-center blue-div">
  <h2 class="m-0">Reset Password</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="pcon-4 pt-2">
    <table class="white-div">
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
    </table>
  </div>
  <div>
    <%= f.submit "Reset Password", class: "bottom-green-button submit" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>