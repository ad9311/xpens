<section>
  <div class="text-center blue-div">
    <h1 class="m-0">My Expenses</h1>
  </div>
  <%= render 'layouts/notice_and_alerts'%>
  <div class="white-div reset-width text-right">
    <span class="pr-2"><strong>Total spent: </strong>$<%= @total_spent %></span>
  </div>
</section>
<% unless @grouped_expenses.empty?%>
  <div class="pcon-4 pt-2 bottom-padding">
    <table class="white-div">
      <% @grouped_expenses.each do |expense| %>
        <tr>
          <td><%= image_tag expense.folders.first.icon, class: "folder-icon" %></td>
          <td><span class="pr-1"><strong><%= expense.name %></strong></span></td>
          <td><span class="pr-1">$<%= expense.amount.round(2) %></span></td>
          <td><span class="pr-1"><small class="date"><%= expense.created_at.strftime("%d-%b-%Y") %></small></span></td>
          <td><button class="green-button"><%= link_to 'View', expense %></button></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
<div>
  <button class="bottom-green-button"><%= link_to 'New Expense', new_expense_path %></button>
</div>
